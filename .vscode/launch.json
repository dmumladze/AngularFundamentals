{
    /* 
     * you must install extension "Debugger for Chrome"
     * https://github.com/Microsoft/vscode-chrome-debug 
     */

    "version": "2.0.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp2.0/ng4play.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp2.0/ng4play.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",        
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },        
        {
            //launches chrome.exe --remote-debugging-port=9222
            "name": "Debug with Chrome",
            "type": "chrome",
            "request": "launch",            
            "url": "http://localhost:5000/",
            "sourceMaps": true,
            "trace": true,            
            "webRoot": "${workspaceRoot}",
            "userDataDir": "${workspaceRoot}/.vscode/chrome",
            "sourceMapPathOverrides": {
                "webpack:///C:*":"C:/*"
            }
        },
        {
            //you must be running "C:\Program Files (x86)\Google\Chrome\Application\chrome.exe" --remote-debugging-port=9222
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "sourceMaps": true,
            "port": 9222,
            "webRoot": "${workspaceRoot}",
            "sourceMapPathOverrides": {
                "webpack:///C:*":"C:/*"
            }            
        }
    ]
}